generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Модель для Городов
model CityPage {
  id           Int      @id @default(autoincrement())
  slug         String   @unique
  cityName     String
  mainTitle    String
  seoText      String   @db.Text
  contactPhone String
  contactEmail String
  whatsappLink String
  telegramLink String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Модель для Услуг
model Service {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  iconName    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Модель для Заявок (Лидов)
model Lead {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  city      String
  status    String   @default("new")
  createdAt DateTime @default(now())
}
